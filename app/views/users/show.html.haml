.container.user-page
  %header.user-nav
    .media
      .media-left
        %img.media-object{alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: @user.avatar, style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.nickname
          %span.label.label-default.project-number
            = @user.prototypes_count
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            = simple_format @user.profile
          .col-md-6
            %h4 Works
            = simple_format @user.works
.container.proto-list
  .row
    = render @prototypes
.text-center
  = paginate(@prototypes)
