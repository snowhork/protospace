= form_for current_user do |f|
  %container.user-new{action: ""}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.email_field :nickname, autofocus: true
            .user-image.col-md-2{:style => 'background-image: url(http://泣ける動画.com/wp-content/uploads/2015/01/t0205-01.jpg);'}
              %button.btn.btn-primary Change image
              %input{type: "file"}/
          %h4 E-mail
          = f.email_field :email, class: 'user-email'
          %h4 Password
          = f.password_field :password, class: 'user-password'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_field :profile
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :works
      .row.text-center.user-btn
        = f.submit 'Save', class: 'btn btn-lg btn-primary btn-block'
