= form_for current_user do |f|
  %container.user-new{action: ""}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :nickname, autofocus: true
            .user-image.col-md-2#js-user_avatar_display{:style => "background-image: url(#{@user.avatar});"}
              %button.btn.btn-primary Change image
              = f.file_field :avatar, id: 'js-user_avatar_form'
          %h4 E-mail
          = f.email_field :email, class: 'user-email', placeholder: 'E-mail'
          %h4 Password
          = f.password_field :password, class: 'user-password', placeholder: 'Password'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: 'Member'
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_field :profile, placeholder: 'Profile'
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :works, placeholder: 'Works'
      .row.text-center.user-btn
        = f.submit 'Save', class: 'btn btn-lg btn-primary btn-block'
