= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .container.user-new
    .col-md-8.col-md-offset-2
      = devise_error_messages!
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              %input{type: "text", placeholder: "Username"}/
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              %input{type: "file"}/
          / %input.user-email{type: "email", placeholder: "E-Mail"}/
          = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'user-email'
          = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'Password'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              %input{type: "text", placeholder: "Member"}/
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile"}
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Works"}
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save
