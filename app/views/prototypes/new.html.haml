= form_for @prototype do |prototype_f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = prototype_f.text_area :title, rows: "1", placeholder: "Title", class: 'proto-new-title'
          / %input.proto-new-title{type: "text", placeholder: "Title"}/
      .row
        .col-md-12
          .cover-image-upload
            = fields_for :images, @prototype.images[0] do |image_f|
              = image_f.file_field :substance
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                = fields_for :images, @prototype.images[1] do |image_f|
                  = image_f.file_field :substance
            %li.list-group-item.col-md-4
              .image-upload
                = fields_for :images, @prototype.images[2] do |image_f|
                  = image_f.file_field :substance
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = prototype_f.text_area :catch_copy, rows: "1", placehoder: "Catch Copy"
        .col-md-12
          = prototype_f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish

