= form_for @prototype do |f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_area :title, rows: "1", placeholder: "Title", class: 'proto-new-title'
      .row
        .col-md-12
          .cover-image-upload#js-main_image_display
            = f.fields_for :images, @prototype.images[0]  do |images_form|
              = images_form.file_field :substance, id: 'js-main_image_form'
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload#js-sub1_image_display
                = f.fields_for :images, @prototype.images[1] do |images_form|
                  = images_form.file_field :substance, id: 'js-sub1_image_form'
            %li.list-group-item.col-md-4
              .image-upload#js-sub2_image_display
                = f.fields_for :images, @prototype.images[2] do |images_form|
                  = images_form.file_field :substance, id: 'js-sub2_image_form'
            %li.list-group-item.col-md-4
              .image-upload-plus#js-image_upload_plus
                %span +
              .image-upload#js-sub3_image_display{style: "display: none"}
                = f.fields_for :images, @prototype.images[3] do |images_form|
                  = images_form.file_field :substance, id: 'js-sub3_image_form'

 
      .row.proto-description
        .col-md-12
          = f.text_area :catch_copy, rows: "1", placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish

