.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{role: "presentation", class: switch_proto_class('prototypes') }
          = link_to 'Newest PROTO', prototypes_path
        %li{role: "presentation", class: switch_proto_class('popular')}
          = link_to 'Popular PROTO', popular_index_path
      = link_to tags_path do
        %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    = render @prototypes

.text-center
  = paginate(@prototypes)
